{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
    },
    "plugins": ["react"],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
        }
      },
    "rules": {
      "semi": [1, "always"],
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      }
}
